{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",  // Más simple que nodenext
    "target": "es2020",    // Más compatible
    "lib": ["es2020"],
    "types": ["node"],
    
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}